<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- App bar-->
    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_bar"
        android:layout_margin="20dp"
        android:weightSum="4">


        <LinearLayout
            android:id="@+id/ll_row1_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">


            <Button
                android:id="@+id/btn_ar_main"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:background="@drawable/gradiant_base"
                android:text="واقعیت افزوده" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_row2_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_row1_main"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:weightSum="3">


            <Button
                android:id="@+id/btn_qr_main"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/material_red_200"
                android:text="پادکست" />


            <Button
                android:id="@+id/btn_gallery_main"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:background="@color/material_blue_200"
                android:text="گالری" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_row3_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_row2_main"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">


            <Button
                android:id="@+id/btn_info_main"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/material_green_100"
                android:text="تکمیل اطلاعات" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_row4_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_row3_main"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:weightSum="3">


            <Button
                android:id="@+id/btn_aboutme_main"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:background="@color/material_blue_200"
                android:text="درباره سازنده" />


            <Button
                android:id="@+id/btn_aboutbook_main"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/material_blue_200"
                android:text="درباره کتاب" />


        </LinearLayout>





    </RelativeLayout>

</LinearLayout>


